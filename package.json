{
  "name": "todo-list",
  "productName": "ToDo-List MVG",
  "version": "1.0.0",
  "description": "daily task list",
  "keywords": [
    "ToDo-List"
  ],
  "homepage": "https://github.com/daneecool/electron-app#readme",
  "bugs": {
    "url": "https://github.com/daneecool/electron-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daneecool/electron-app.git"
  },
  "license": "MIT",
  "author": "Daniel",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^35.1.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "sqlite3": "^5.1.7",
    "toastify-js": "^1.12.0",
    "todo-list": "^0.0.3"
  },
  "build": {
    "appId": "todo-list",
    "productName": "Todo-List",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/installer-icon.ico",
      "uninstallerIcon": "build/uninstaller-icon.ico",
      "uninstallDisplayName": "ToDo-List MVG 1.0.0"
    }
  }
}
